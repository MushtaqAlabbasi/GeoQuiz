<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#020B22"
    tools:context=".QuestionActivity"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/yemen_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yemen_btn"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:background="@drawable/rounded_button"
            />

        <Button
            android:id="@+id/egypt_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="@string/egypt_btn"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            />

        <Button
            android:id="@+id/usa_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/usa_btn"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:id="@+id/hidden_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            >

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="your score here"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColorHint="#DBDBDB"
                android:textColor="#FFFFFF"/>


            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="question is going to appear here"
                android:textColorHint="#DBDBDB"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
            <Button
                android:id="@+id/t_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/false_btn"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"

                android:background="@drawable/rounded_button"
                />

            <Button
                android:id="@+id/f_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/true_btn"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_button"
                />
        </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/p_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/enable_previous_arrow" />


            <Button
                android:id="@+id/n_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/disabled_next_arrow"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Cheating"
                android:id="@+id/cheating"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color"/>

        </LinearLayout>





    </LinearLayout>

</LinearLayout>